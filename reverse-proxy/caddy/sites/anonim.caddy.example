# Пример конфигурации сайта anonim-m.online для Caddy
# Этот файл можно включить в основной Caddyfile через import

anonim-m.online, www.anonim-m.online {
    # Прокси на Django приложение
    reverse_proxy anonim-web:8000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Статические файлы через WhiteNoise (внутри Django)
    # Медиа файлы
    handle_path /media/* {
        root * /srv/media_anonin
        file_server
        header Cache-Control "public, max-age=31536000"
    }

    # Заголовки безопасности
    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        -Server
    }

    # Ограничение размера загружаемых файлов
    request_body {
        max_size 10MB
    }
}
