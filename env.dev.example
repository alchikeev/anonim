# Пример файла .env.dev для разработки
# Скопируйте этот файл в .env.dev и заполните значения

# Django настройки
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# Домен сайта
DJANGO_SITE_DOMAIN=localhost:8000

# База данных (SQLite для разработки)
DJANGO_DB_ENGINE=django.db.backends.sqlite3
DJANGO_DB_NAME=db.sqlite3

# Telegram Bot настройки (опционально для dev)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_telegram_bot_username
TELEGRAM_WEBHOOK_URL=http://localhost:8000/telegram/webhook/

